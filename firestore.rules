rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Deny access to everything by default
    match /{document=**} {
      allow read, write: if true;
    }

    // Allow users to read any user document but write only their own document
    match /users/{userId} {
      allow read: if request.auth != null; // Any authenticated user can read any user's document
      allow write: if request.auth != null && request.auth.uid == userId; // Users can write only their own document
    }
  }
}